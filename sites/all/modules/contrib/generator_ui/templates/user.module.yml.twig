{% if user_login %}
/**
 *  Implements hook_user_login().
 */
function {{ module_name }}_user_login($account) {
  if($account->hasPermission('access administration pages')){
    drupal_set_message(t("Hi Administrator: ".$account->getUsername()));
  }
}
{% endif %}
{% if user_logout %}
/**
 *  Implements hook_user_logout().
 */
function {{ module_name }}_user_logout($account) {
{% if help %}
  //Go to the /user page when deconnecting.
{% endif %}
  return new \Symfony\Component\HttpFoundation\RedirectResponse('/user');
}
{% endif %}