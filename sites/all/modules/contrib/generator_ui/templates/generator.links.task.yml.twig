{%  if help == 1 %}
# The machine name for your local task, which usually matches the machine name of the route (given in the 'route_name' line)
# The path MUST fit the drupal path architecture. For example, admin/configs/my-module/generator can be a link task of
# admin/configs/my-module but not admin/structure/my-module.
{% endif %}
{{ route }}:
{%  if help == 1 %}
  # The machine name of the route
{% endif %}
  route_name: {{ route }}
{%  if help == 1 %}
  # Task title.
{% endif %}
  title: '{{ title }}'
{%  if help == 1 %}
  # Lower (negative) numbers come before higher (positive) numbers).
{% endif %}
  weight: {{ weight }}
{%  if help == 1 %}
  # The machine name of the menu link that is the parent in the administrative hierarchy
{% endif %}
  base_route: {{ base_route }}